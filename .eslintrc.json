{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "object-curly-spacing": ["error", "always"],
    "max-len": ["error", {"ignoreTemplateLiterals": true}],
    "require-jsdoc": ["off"]
  },
  "overrides": [
    {
      "files": ["routes/**"],
      "rules": {
        "new-cap": ["off"]
      }
    },
    {
      "files": ["public/javascripts/**"],
      "env": {
        "browser": true,
        "node": false
      }
    }
  ]
}